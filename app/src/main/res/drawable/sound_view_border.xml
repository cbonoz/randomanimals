<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_light" /> <!-- border color -->
        </shape>
    </item>

    <!-- adjust borders width here -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/tan" />  <!-- background color -->
        </shape>
    </item>
</layer-list>